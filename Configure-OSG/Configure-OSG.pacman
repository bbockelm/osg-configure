description('Configure OSG')
url('!!WEB_ROOT!!')

path('$VDT_LOCATION/osg/lib/python', 'PYTHONPATH')

shell('vdt-begin-install Configure-OSG')
shell('vdt-untar !!TARBALL_FILE!!')
shell('vdt-end-install')
path('osg/bin', 'PATH', 'no-check')
{
    exists('monitoring')
    OR
    softLink('osg/etc', 'monitoring')
}

{
    exists('osg/etc/config.ini')
    OR
    copy('osg/etc/ce.ini', 'osg/etc/config.ini')
}
